{
  "server": {
    "host": "127.0.0.1",
    "ports": [8080, 8081],
    "defaultPort": 8080
  },
  "content": {
    "maxClientBodySize": 1048576,
    "defaultIndexFile": "index.html",
    "allowDirectoryListing": false
  },
  "errorPages": {
    "400": "error_pages/400.html",
    "403": "error_pages/403.html",
    "404": "error_pages/404.html",
    "405": "error_pages/405.html",
    "413": "error_pages/413.html",
    "500": "error_pages/500.html"
  },
  "cgi": {
    "enabled": true,
    "extensions": {
      "py": "/usr/bin/python3"
    }
  },
  "sessions": {
    "enabled": true,
    "cookieName": "SESSIONID"
  },
  "routes": [
    {
      "path": "/",
      "root": "./www",
      "methods": ["GET"]
    },
    {
      "path": "/api",
      "root": "./api",
      "methods": ["GET", "POST", "DELETE"]
    },
    {
      "path": "/upload",
      "root": "./uploads",
      "methods": ["POST"]
    },
    {
      "path": "/cgi-bin",
      "root": "./cgi-bin",
      "methods": ["GET"],
      "cgiEnabled": true
    },
    {
      "path": "/redirect-test",
      "redirect": "/",
      "statusCode": 302
    }
  ]
}
