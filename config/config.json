{
  "timeouts": {
    "headerMillis": 5000,
    "bodyMillis": 15000,
    "keepAliveMillis": 15000
  },
  "servers": [
    {
      "name": "main",
      "listen": {
        "host": "0.0.0.0",
        "port": 8080,
        "default": true
      },
      "serverNames": ["localhost", "main.com"],
      "root": "./www/main",
      "clientMaxBodyBytes": 1048576,
      "errorPages": {
        "400": "./error_pages/400.html",
        "403": "./error_pages/403.html",
        "404": "./error_pages/404.html",
        "405": "./error_pages/405.html",
        "413": "./error_pages/413.html",
        "500": "./error_pages/500.html"
      },
      "routes": [
        {
          "path": "/",
          "methods": ["GET"],
          "root": "./www/main",
          "index": "index.html",
          "autoIndex": false
        },
        {
          "path": "/simo",
          "root": "./www/main",
          "methods": [
            "POST",
            "GET"
          ]
        },
        {
          "path": "/uploads",
          "methods": ["GET", "POST", "DELETE"],
          "root": "./www/main/uploads",
          "index": "index.html",
          "autoIndex": true,
          "upload": {
            "enabled": true,
            "dir": "./www/main/uploads",
            "fileField": "file"
          }
        },
        {
          "path": "/redirect",
          "methods": ["GET"],
          "redirect": {
            "status": 301,
            "to": "/"
          }
        }
      ]
    },
    {
      "name": "main",
      "listen": {
        "host": "0.0.0.0",
        "port": 8081,
        "default": false
      },
      "serverNames": ["localhost", "main.com"],
      "root": "./www/main",
      "clientMaxBodyBytes": 1048576,
      "errorPages": {
        "400": "./error_pages/400.html",
        "403": "./error_pages/403.html",
        "404": "./error_pages/404.html",
        "405": "./error_pages/405.html",
        "413": "./error_pages/413.html",
        "500": "./error_pages/500.html"
      },
      "routes": [
        {
          "path": "/",
          "methods": ["GET"],
          "root": "./www/main",
          "index": "index.html",
          "autoIndex": false
        },
        {
          "path": "/uploads",
          "methods": ["GET", "POST", "DELETE"],
          "root": "./www/main/uploads",
          "index": "index.html",
          "autoIndex": true,
          "upload": {
            "enabled": true,
            "dir": "./www/main/uploads",
            "fileField": "file"
          }
        },
        {
          "path": "/cgi",
          "methods": ["GET", "POST"],
          "cgi": {
            "enabled": true,
            "binDir": "./cgi-bin",
            "byExtension": {
              ".py": "python3"
            }
          }
        },
        {
          "path": "/redirect",
          "methods": ["GET"],
          "redirect": {
            "status": 301,
            "to": "/"
          }
        }
      ]
    },
    {
      "name": "main",
